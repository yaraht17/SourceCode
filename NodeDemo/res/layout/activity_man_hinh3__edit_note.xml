<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nodedemo.ManHinh3_EditNote" >

    <TextView
        android:id="@+id/txt_infoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="Thông tin thành viên" />

    <TextView
        android:id="@+id/txt_Name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:text="Tên : " />

    <TextView
        android:id="@+id/txt_Age3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Name3"
        android:layout_below="@+id/txt_Name3"
        android:layout_marginTop="20dp"
        android:text="Tuổi :" />

    <TextView
        android:id="@+id/txt_Address3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Age3"
        android:layout_below="@+id/txt_Age3"
        android:layout_marginTop="20dp"
        android:text="Địa chỉ :" />

    <TextView
        android:id="@+id/txt_NameView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Name3"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txt_Name3"
        android:text="Tiến"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_AgeView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Age3"
        android:layout_alignLeft="@+id/txt_NameView3"
        android:layout_toRightOf="@+id/txt_Age3"
        android:text="20"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_AddressView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Address3"
        android:layout_alignLeft="@+id/txt_NameView3"
        android:layout_toRightOf="@+id/txt_Address3"
        android:text="Hà Nội"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Address3"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Update" />

    <Button
        android:id="@+id/btn_Listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Address3"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btn_Update"
        android:text="Listen" />

</RelativeLayout>