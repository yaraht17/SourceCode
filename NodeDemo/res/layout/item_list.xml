<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Họ và Tên :"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_NameView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/txt_Name"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/txt_Name"
        android:text="Tiến"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_AddressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_AgeView"
        android:layout_toRightOf="@+id/txt_Address"
        android:text="Hà Nội"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_AddressView"
        android:layout_alignLeft="@+id/txt_Name"
        android:layout_toLeftOf="@+id/txt_AgeView"
        android:text="Địa chỉ :"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_AgeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Age"
        android:layout_alignBottom="@+id/txt_Age"
        android:layout_alignLeft="@+id/txt_NameView"
        android:text="20"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Address"
        android:layout_below="@+id/txt_Name"
        android:text="Tuổi :"
        android:textColor="#000000" />

</RelativeLayout>